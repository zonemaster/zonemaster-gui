---
import LanguageSwitcher from './LanguageSwitcher.astro';
import Logo from './Logo.astro';
import Navigation from './Navigation.astro';
import MobileMenuButton from './MobileMenuButton.astro';
import config from '@/config';
---

<header class="zm-header">
    <div class="container">
        <div class="zm-header__group">
            <Logo />
            <span class="zm-header__sitename" role="banner">{config.siteInfo.siteName}</span>
            <MobileMenuButton />
            <div class="zm-header__navigation-group" id="mainMenu">
                <Navigation />
                <LanguageSwitcher />
            </div>
        </div>
    </div>
</header>
