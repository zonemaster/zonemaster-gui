{
    "name": "zonemaster-gui",
    "version": "5.0.0-alpha.3",
    "license": "BSD-2-Clause",
    "scripts": {
        "start": "npm run dev",
        "dev": "astro dev",
        "build": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide && astro build",
        "release": "npm run build && node scripts/create_release.js",
        "preview": "astro preview",
        "astro": "astro",
        "lib:build": "cd src/lib && vite build -c ./vite.config.js --outDir ../../dist --emptyOutDir",
        "lib:demo": "vite serve demo -c src/lib/vite.config.js",
        "postinstall": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "e2e": "playwright --version && playwright test",
        "e2e:update": "playwright --version && playwright test --update-snapshots",
        "e2e:install": "playwright install chromium",
        "e2e:install-deps": "playwright install-deps chromium"
    },
    "private": false,
    "type": "module",
    "dependencies": {
        "@astrojs/node": "^9.1.3",
        "@astrojs/svelte": "^7.0.9",
        "@inlang/paraglide-astro": "^0.3.5",
        "astro": "^5.6.1",
        "punycode": "^2.3.1",
        "remark-definition-list": "^2.0.0",
        "remark-gfm": "^4.0.1",
        "svelte": "^5.19.9"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "^3.2.5",
        "@inlang/paraglide-js": "1.11.8",
        "@playwright/test": "^1.50.1",
        "@storybook/addon-essentials": "^8.6.4",
        "@storybook/addon-interactions": "^8.6.4",
        "@storybook/addon-svelte-csf": "^5.0.0-next.23",
        "@storybook/blocks": "^8.6.4",
        "@storybook/svelte": "^8.6.4",
        "@storybook/svelte-vite": "^8.6.4",
        "@storybook/test": "^8.6.4",
        "@sveltejs/vite-plugin-svelte": "^5.0.3",
        "@tsconfig/svelte": "^5.0.4",
        "@types/node": "^22.13.1",
        "archiver": "^7.0.1",
        "prettier": "3.5.0",
        "prettier-plugin-astro": "0.14.1",
        "prettier-plugin-svelte": "^3.3.3",
        "storybook": "^8.6.4",
        "storybook-dark-mode": "^4.0.2",
        "svelte-check": "^4.1.4",
        "typescript": "^5.7.3",
        "vite": "^6.1.0"
    }
}
